<%= $terminal.color "NAME", :bold %>:
    <%= @name %>

<%= $terminal.color "VERSION", :bold %>:
    <%= @version %>

<%= $terminal.color "DESCRIPTION", :bold %>:
    <%= @description %>

<%= $terminal.color "COMMANDS", :bold %>:
<% @commands.sort{|a,b| a.value_of_name <=> b.value_of_name}.each do |c| %>    <%= c.value_of_name %>
<% end %>